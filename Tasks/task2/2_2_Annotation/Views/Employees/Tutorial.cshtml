@{
    ViewBag.Title = "Tutorial";
}

<h2>Tutorial</h2>

<div>

    <form action="SaveUser" method="post">
        <!-- Email input -->
        <div class="form-outline mb-4">
            <input type="number" id="form2Example1" class="form-control" name="Id" />
            <label class="form-label" for="form2Example1">Id</label>
        </div>
        <div class="form-outline mb-4">
            <input type="text" id="form2Example1" class="form-control" name="Name" />
            <label class="form-label" for="form2Example1">Name</label>
        </div>

      

        <!-- 2 column grid layout for inline styling -->
        <div class="form-outline mb-4">
            <input type="number" id="form2Example2" class="form-control" name="Age" />
            <label class="form-label" for="form2Example2">Age</label>
